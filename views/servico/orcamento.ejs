<% include ../partials/header.ejs %>

<div class="container-fluid" style="margin-top: 2%;">
  <div class="row justify-content-center">
    <div class="col-md-10">
    
      <h1 class="text-center" style="border: 1px solid; border-left: none; border-right: none;">Or√ßamento</h1><br>

      <table class="table table-striped table-hover">
        <header>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Data de registro</th>
            <th></th>
          </tr> 
        </header>
        <tbody>
        <% servicos.forEach(servico =>{ %>
          <tr>
            <td><%=servico.nome%></td>
            <td><%=servico.celular%></td>
            <td><%=servico.dataC%></td>
            <td>
              <a href="/cadastro/<%=servico.id%>" class="btn"> <i class="material-icons md-36">visibility</i></a>
              <a class="btn " href="/cadastro" onclick="event.preventDefault(); document.getElementById('logout-form-<%=servico.id%>').submit(); "><i class="material-icons md-36 md-red">delete</i></a>
            </td>
          </tr>

          <form id="logout-form-<%=servico.id%>" action="/delete/<%=servico.id%>" method="POST" style="display: none;">
            <input type="hidden" name="_method" value="DELETE">
          </form>
        <% }) %>
        </tbody>
      </table>

    </div>
  </div>
</div>


<% include ../partials/footer.ejs %>