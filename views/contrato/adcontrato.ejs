        <% include adclausulas.ejs%>
       
        <div class="form-inline justify-content-md-center col-md-12" style="margin-top: -3%;">
          <label for="dataContrato" class="col-form-label">Toyohashi </label>
          <input style="padding: 0px 0px 0px 8px; width: 20%;" type="date" class="form-control border-top-0 border-left-0 border-right-0 rounded-0" name="dataContrato" id="dataContrato" placeholder="Data de cadastro">
        </div>  
        

        <br>  
          
        <button type="submit" class="btn btn-primary">Cadastrar</button><br><br>
      </form>
      
    </div>
  </div>
